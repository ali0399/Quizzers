<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:theme="@style/Theme.Quizzers"
    tools:context=".GamePlayActivity">


    <TextView
        android:id="@+id/timerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="@android:color/transparent"
        android:text="10"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/timerIv"
        app:layout_constraintEnd_toEndOf="@+id/timerIv"
        app:layout_constraintStart_toStartOf="@id/timerIv"
        app:layout_constraintTop_toTopOf="@id/timerIv"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/qNbrTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@android:color/transparent"
        android:text="00"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@drawable/round_corner_bg"
        android:backgroundTint="@color/colorScheme4"
        android:gravity="center"
        android:padding="8dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam vestibulum posuere sapien ac euismod?"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerTv" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTv">

        <TextView
            android:id="@+id/option1Tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/option_bg"
            android:padding="10dp"
            android:text="Option 1"
            android:textColor="@color/secondaryTextColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/option2Tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/option_bg"
            android:padding="10dp"
            android:text="Option 2"
            android:textColor="@color/secondaryTextColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/option3Tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/option_bg"
            android:padding="10dp"
            android:text="Option 3"
            android:textColor="@color/secondaryTextColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/option4Tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/option_bg"
            android:padding="10dp"
            android:text="Option 4"
            android:textColor="@color/secondaryTextColor"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/timerIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/timerTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stopwatch_icon"
        app:tint="@android:color/white" />

    <TextView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Q.No:"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/qNbrTv"
        app:layout_constraintEnd_toStartOf="@+id/qNbrTv"
        app:layout_constraintTop_toTopOf="@+id/qNbrTv"
        app:srcCompat="@drawable/qnbr_icon" />

    <LinearLayout
        android:id="@+id/scoreUploadProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Uploading Scores..."
            android:textSize="20sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>